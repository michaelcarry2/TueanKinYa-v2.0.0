<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_300"
    tools:context=".AppointmentFragment">

    <!-- TODO: Update blank fragment layout -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/navbar_top_profile"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/card_header"
            android:fontFamily="@font/kanit_regular"
            android:gravity="center"
            android:text="เพิ่มข้อมูลการนัด"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/box_add_date_appoint_profile"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/card_tabel_time"
            app:layout_constraintTop_toBottomOf="@id/navbar_top_profile" />

        <TextView
            android:id="@+id/text_add_date_appointment_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/kanit_regular"
            android:text="วันที่นัดครั้งต่อไป"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/box_add_date_appoint_profile"
            app:layout_constraintTop_toTopOf="@id/box_add_date_appoint_profile" />

        <TextView
            android:id="@+id/add_date_appointment_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounder_date_bg"
            android:fontFamily="@font/kanit_regular"
            android:hint="เลือกวันที่"
            android:paddingStart="30dp"
            android:paddingTop="7dp"
            android:paddingEnd="30dp"
            android:paddingBottom="7dp"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/text_add_date_appointment_profile"
            app:layout_constraintTop_toBottomOf="@id/text_add_date_appointment_profile" />


        <TextView
            android:id="@+id/box_add_hospital_appointment_profile"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/card_tabel_time"
            app:layout_constraintTop_toBottomOf="@id/box_add_date_appoint_profile" />

        <TextView
            android:id="@+id/text_add_hospital_appointment_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/kanit_regular"
            android:text="โรงพยาบาลที่นัด"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/box_add_hospital_appointment_profile"
            app:layout_constraintTop_toTopOf="@id/box_add_hospital_appointment_profile" />

        <EditText
            android:id="@+id/button_add_hospital_apponitment_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/kanit_regular"
            android:hint="โรงพยาบาลสรรพสิทธิประสงค์"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@id/text_add_hospital_appointment_profile"
            app:layout_constraintTop_toBottomOf="@id/text_add_hospital_appointment_profile" />

        <Button
            android:id="@+id/button_save_appointment_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="250dp"
            android:background="@drawable/rounder_primary_gb_outline"
            android:fontFamily="@font/kanit_regular"
            android:text="ตกลง"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/box_add_hospital_appointment_profile" />

        <Button
            android:id="@+id/button_cancel_appoinement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounder_red_gb_outline"
            android:fontFamily="@font/kanit_regular"
            android:text="ยกเลิก"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/button_add_hospital_apponitment_profile"
            app:layout_constraintTop_toBottomOf="@id/box_add_hospital_appointment_profile" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_300"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/navbar_top_profile"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/card_header"
            android:fontFamily="@font/kanit_regular"
            android:gravity="center"
            android:text="ข้อมูลส่วนตัว"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/box_detail_profile"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/card_tabel_time"
            app:layout_constraintTop_toBottomOf="@id/navbar_top_profile" />

        <TextView
            android:id="@+id/text_detail_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/kanit_regular"
            android:text="ข้อมูลส่วนตัว"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/box_detail_profile"
            app:layout_constraintTop_toTopOf="@id/box_detail_profile" />

        <TextView
            android:id="@+id/name_data_detail_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/kanit_regular"
            android:text="- โปรดเพิ่มชื่อผู้ใช้งาน"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/text_detail_profile"
            app:layout_constraintTop_toBottomOf="@id/text_detail_profile" />

        <TextView
            android:id="@+id/name_sickness_data_detail_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_regular"
            android:text="- โปรดเพิ่มโรคประจำตัว"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/name_data_detail_profile"
            app:layout_constraintTop_toBottomOf="@id/name_data_detail_profile" />

        <TextView
            android:id="@+id/name_hospital_data_detail_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_regular"
            android:text="- โปรดเพิ่มโรงพยาบาลที่รักษา"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/name_sickness_data_detail_profile"
            app:layout_constraintTop_toBottomOf="@id/name_sickness_data_detail_profile" />

        <TextView
            android:id="@+id/button_add_data_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:background="@drawable/add_circle_48"
            app:layout_constraintStart_toEndOf="@id/text_detail_profile"
            app:layout_constraintTop_toTopOf="@id/text_detail_profile" />

        <TextView
            android:id="@+id/box_detail_appointment_profile"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/card_tabel_time"
            app:layout_constraintTop_toBottomOf="@id/box_detail_profile" />

        <TextView
            android:id="@+id/text_appointment_detail_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/kanit_regular"
            android:text="นัดครั้งต่อไป"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/box_detail_appointment_profile"
            app:layout_constraintTop_toTopOf="@id/box_detail_appointment_profile" />

        <TextView
            android:id="@+id/date_data_appointment_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/kanit_regular"
            android:text="- โปรดเลือกวันที่นักครั้งต่อไป"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/text_appointment_detail_profile"
            app:layout_constraintTop_toBottomOf="@id/text_appointment_detail_profile" />

        <TextView
            android:id="@+id/name_hospital_appoinrment_data_detail_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_regular"
            android:text="- โปรดเพิ่มโรงพยาบาลที่นัดครั้งต่อไป"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/date_data_appointment_profile"
            app:layout_constraintTop_toBottomOf="@id/date_data_appointment_profile" />

        <TextView
            android:id="@+id/button_add_appointment_data_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:background="@drawable/add_circle_48"
            app:layout_constraintStart_toEndOf="@id/text_appointment_detail_profile"
            app:layout_constraintTop_toTopOf="@id/text_appointment_detail_profile" />

        <TextView
            android:id="@+id/box_detail_history_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/card_tabel_time"
            app:layout_constraintTop_toBottomOf="@id/box_detail_appointment_profile" />

        <TextView
            android:id="@+id/text_hitory_drug_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:fontFamily="@font/kanit_regular"
            android:text="ประวัติการกินยา"
            android:textColor="@color/black"
            android:background="@drawable/card_tabel_time"
            android:textSize="24sp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/box_detail_history_profile"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>